#!/usr/bin/env bash
# Configure Nginx to run as nginx user on port 8080

# Update Nginx configuration to run as nginx user
sed -i 's/user www-data;/user nginx;/g' /etc/nginx/nginx.conf

# Change default site to listen on port 8080
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80;/listen [::]:8080;/g' /etc/nginx/sites-available/default

# Kill any running Nginx process
pkill -f nginx

# Start Nginx as nginx user
sudo -u nginx /usr/sbin/nginx
