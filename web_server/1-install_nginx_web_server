#!/usr/bin/env bash
# Configures a new Ubuntu machine to install and configure Nginx
# Nginx listens on port 80 and returns "Holberton School" on GET request to /

# Update package list and install nginx
apt-get update -y > /dev/null 2>&1
apt-get install nginx -y > /dev/null 2>&1

# Create a simple HTML page with required content
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure nginx is running
service nginx start > /dev/null 2>&1 || service nginx restart > /dev/null 2>&1
