#!/usr/bin/env bash
# Install and configure Nginx to return "Holberton School for the win!" at the root

# Update package lists
apt-get update -y

# Install nginx
apt-get install -y nginx

# Ensure nginx is running (without systemctl)
service nginx start

# Replace the default index page content
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# OR you can overwrite the generic index.html if it exists
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx to apply any changes (without systemctl)
service nginx restart

